# Appwrite Configuration
# Get these values from your Appwrite Console (https://cloud.appwrite.io)

# Appwrite Endpoint - Default for Appwrite Cloud
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1

# Project ID - Get from Appwrite Console > Your Project > Settings
NEXT_PUBLIC_APPWRITE_PROJECT_ID=your_project_id_here

# Database ID - Get from Appwrite Console > Databases > Your Database > Settings
NEXT_PUBLIC_APPWRITE_DATABASE_ID=your_database_id_here

# Storage Bucket ID - Get from Appwrite Console > Storage > Your Bucket > Settings
NEXT_PUBLIC_APPWRITE_STORAGE_BUCKET_ID=your_bucket_id_here

# Collection IDs - Get from Appwrite Console > Database > Collections
# You can use these exact names when creating collections or change them
NEXT_PUBLIC_APPWRITE_USERS_COLLECTION_ID=users
NEXT_PUBLIC_APPWRITE_AUTH_CODES_COLLECTION_ID=auth_codes
NEXT_PUBLIC_APPWRITE_STUDENTS_COLLECTION_ID=students
NEXT_PUBLIC_APPWRITE_RESULTS_COLLECTION_ID=results
NEXT_PUBLIC_APPWRITE_CLASSES_COLLECTION_ID=classes
NEXT_PUBLIC_APPWRITE_SESSIONS_COLLECTION_ID=sessions

# Optional: School/Application Settings
NEXT_PUBLIC_SCHOOL_NAME=Result Generation System
NEXT_PUBLIC_SCHOOL_ADDRESS=Your School Address
NEXT_PUBLIC_SCHOOL_PHONE=+234-xxx-xxx-xxxx
NEXT_PUBLIC_SCHOOL_EMAIL=info@yourschool.com

# Optional: Feature Flags
NEXT_PUBLIC_ENABLE_PDF_DOWNLOAD=true
NEXT_PUBLIC_ENABLE_CSV_EXPORT=true
NEXT_PUBLIC_ENABLE_EMAIL_NOTIFICATIONS=false

# Optional: Performance Settings
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_RESULTS_PER_PAGE=50
NEXT_PUBLIC_SESSION_TIMEOUT=3600000

# Development Settings (Remove in production)
NODE_ENV=development